<UserControl x:Class="SharpFlowDesign.UserControls.FunctionUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpFlowDesign.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowGridLines="False">
        <Ellipse  Fill="#FF2E2E2E" Stroke="#FF376DBB" StrokeThickness="4" HorizontalAlignment="Stretch"/>
        <TextBox Margin="18" Text="{Binding Mode=OneWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFD6D6D6" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button Width="20" Height="20" Margin="0,-15" Click="ButtonBase_OnClick" VerticalAlignment="Bottom">+</Button>
    </Grid>

</UserControl>
