<Window x:Class="SharpFlowDesign.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:customControls="clr-namespace:SharpFlowDesign.CustomControls"
        xmlns:views="clr-namespace:SharpFlowDesign.Views"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behavior="clr-namespace:SharpFlowDesign.Behavior"
        mc:Ignorable="d"
        Title="Sharp Flow Design" Height="350" Width="825">
    <Window.Resources>
        <ContextMenu x:Key="MyContextMenu">
            <MenuItem Header="Add Celldaw" Click="MenuItem_Click" />
        </ContextMenu>
    </Window.Resources>

    <Grid ContextMenu="{StaticResource MyContextMenu}">
        <Label>Flow Design</Label>
        <customControls:ZoomBorder x:Name="TheZoomBorder" ClipToBounds="True"
                                   Background="{StaticResource MyVisualBrush}">
            <views:DrawingBoard x:Name="TheDrawingBoard" />
        </customControls:ZoomBorder>
        <i:Interaction.Behaviors>
            <behavior:FrameworkElementDropBehavior />
        </i:Interaction.Behaviors>
    </Grid>
</Window>