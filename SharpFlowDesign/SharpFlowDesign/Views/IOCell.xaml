<UserControl x:Class="SharpFlowDesign.Views.IOCell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converter="clr-namespace:SharpFlowDesign.Converter"
             xmlns:views="clr-namespace:SharpFlowDesign.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">

    <UserControl.Resources>
        <converter:IOCellSelectionConverter x:Key="SelectionConverter"/>
    </UserControl.Resources>
    <StackPanel 
        MinWidth="100" MinHeight="100"
        Orientation="Horizontal" 
        

        ZIndex="100" 
        >
        <views:Flow MouseEnter="UIElement_OnMouseEnter"  Thumb.MouseUp="PreviewMouseUp" DataContext="{Binding Input}"></views:Flow>
        <views:FunctionUnit x:Name="FU" LabelContent="{Binding Name}" 
                                    Thumb.DragDelta="OnDragDelta" 
                            Thumb.DragStarted="Thumb_OnDragStarted"
                            Thumb.DragCompleted="Thumb_OnDragCompleted"
                            Thumb.PreviewMouseUp="PreviewMouseUp"
                            SelectionColor="{Binding Path=IsSelected, Converter={StaticResource SelectionConverter}}"  ></views:FunctionUnit>
        <views:Flow  Thumb.MouseUp="PreviewMouseUp" DataContext="{Binding Output}" RenderTransformOrigin="0,0.5">
        </views:Flow>
        
    </StackPanel>
</UserControl>
