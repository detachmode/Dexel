<Window x:Class="Dexel.Editor.Views.AdditionalWindows.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dexel.Editor.Views"
        mc:Ignorable="d"
        Title="Help Window"  Width="400">
    <StackPanel Background="{StaticResource BG}">
        <Label>Mouse:</Label>
        <Label>Middle Mouse Drag : move canvas</Label>
        <Label>Mouse Wheel : zoom</Label>
        <Label>Ctrl + Mouse drag : move function unit with its children</Label>
        <Label>Shift + Mouse drag : duplicate dragged / selected function unit</Label>
        <Label></Label>
        <Label>Keyboard:</Label>
        <Label>Ctrl + Tab : append new function unit</Label>
        <Label>Ctrl + Enter  : new/first function unit as integrated</Label>
        <Label>nter  : select first integrated function unit</Label>
        <Label>Delete : delete selected function unit</Label>
        <Label>Tab : cycle through text fields</Label>
        <Label>Shift + Tab : Cycle through text fields backwards</Label>
        
    </StackPanel>
</Window>
