<Window x:Class="Dexel.Editor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:views="clr-namespace:Dexel.Editor.Views"
        xmlns:dragAndDrop="clr-namespace:Dexel.Editor.DragAndDrop"
        mc:Ignorable="d"
        Focusable="True"
        KeyDown="MainWindow_OnPreviewKeyDown"
        Title="Sharp Flow Design" Height="350" Width="825">
    <Window.Resources>

        <ContextMenu x:Key="MyContextMenu">
            <MenuItem Header="Add Celldaw" Click="AddNewCell_Click" />
            <MenuItem Header="Paste" Click="Paste_click" />
        </ContextMenu>
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Save" Click="MenuItem_Save"></MenuItem>
                <MenuItem Header="Load" Click="MenuItem_Load"></MenuItem>
                <MenuItem Header="Merge" Click="MenuItem_Merge"></MenuItem>
            </MenuItem>
            <MenuItem Header="Output">
                <MenuItem Header="Debug Print" Click="MenuItem_DebugPrint"/>
                <MenuItem Header="Generate Code" Click="MenuItem_GenerateCode"/>
                <Separator></Separator>
                <RadioButton Content="Disabled" IsChecked="True" Unchecked="CheckBox_UnChecked" GroupName="Auto"/>
                <RadioButton Content="Auto Debug Print" Checked="CheckBox_Checked" Unchecked="CheckBox_UnChecked" GroupName="Auto"/>
                <RadioButton Content="Auto Generate" Checked="AutoGenerate_Checked" Unchecked="AutoGenerate_UnChecked" GroupName="Auto"/>
            </MenuItem>

        </Menu>
        <Grid DockPanel.Dock="Top" ContextMenu="{StaticResource MyContextMenu}">
            <Label>Flow Design</Label>
            <views:DrawingBoard x:Name="TheDrawingBoard" Focusable="True" />
            <i:Interaction.Behaviors>
                <dragAndDrop:FrameworkElementDropBehavior />
            </i:Interaction.Behaviors>
        </Grid>
    </DockPanel>
</Window>