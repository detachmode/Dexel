<Window x:Class="Dexel.Editor.Views.UI_Sketches.TemporaryTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dexel.Editor.Views.UI_Sketches"
        xmlns:views="clr-namespace:Dexel.Editor.Views.UI_Sketches"
        mc:Ignorable="d"
        Title="TemporaryTestWindow" Height="800" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <views:HierarchyView Height="Auto" Grid.Column="0"/>
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
        </StackPanel>
        <views:UiSketchCanvas Height="Auto" Grid.Column="2"/>
    </Grid>
</Window>
